@model List<PublisherModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yayıncı Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Yayıncı Adı</th>
                            <th>Ana Sayfa URL</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.WebSiteHomePageUrl</td>
                                <td><a href="/Publisher/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
                <a href="/Publisher/Save" class="btn btn-outline-info mt-1">Yeni Yayıncı Ekle</a>
            </div>
        </div>
    </div>
</div>

