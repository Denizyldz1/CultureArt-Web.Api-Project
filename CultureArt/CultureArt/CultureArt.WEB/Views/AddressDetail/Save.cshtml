@model AddressDetailModel
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Yeni Etkinlik Alanı Kaydı</h3>
            <form class="forms-sample" method="post" asp-controller="AddressDetail" asp-action="Save">
                <div class="form-group">
                    <label for="exampleInputName1">Entinlik Alanı Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="EventAreaName">
                    <span asp-validation-for="EventAreaName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açık Adres</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="StreetAddress">
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Posta Kodu</label>
                    <input type="number" class="form-control" id="exampleInputName1" asp-for="PostCode">
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şehir Bilgisi</label>
                    <select asp-for="CityId" asp-items="(SelectList)ViewBag.Cities" class="form-select">
                        <option>.:: Lütfen Şehir Bilgisi Seçiniz ::.</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>



