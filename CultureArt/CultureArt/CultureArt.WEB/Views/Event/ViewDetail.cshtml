@model EventWithAllEntitiesModel
@{
    ViewData["Title"] = "ViewDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title text-center">Etkinlik Detayları</h4>
            <div class="table-responsive pt-3">
                <div class="d-flex justify-content-center align-items-center flex-column">
                    <h5 class="me-5">Başlık:</h5>
                    <p>@Model.EventFeature.Title</p>
                </div>
                <div class="d-flex justify-content-center align-items-center flex-column">
                    <h5 class="me-5">Açıklama:</h5>
                    <p>@Model.EventFeature.Description</p>
                </div>
                <div class="d-flex justify-content-center align-items-center flex-column">
                    <h5 class="me-5">Kurallar:</h5>
                    <p>@Model.EventFeature.EventRules</p>
                </div>
               @foreach (var item in Model.Publishers)
                {
                    <div class="d-flex justify-content-center align-items-center flex-column">
                        <h5 class="me-5">Yayıncı</h5>
                        <p>@item.Name</p>
                        <h5 class="me-5">WepSiteUrl</h5>
                        <p>@item.WebSiteHomePageUrl</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



